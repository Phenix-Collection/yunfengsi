<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:divider="@drawable/mdivider"
    android:showDividers="middle|end"
    >


    <com.zhy.android.percent.support.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_heightPercent="55%w">

        <ImageView
            android:id="@+id/mine_back"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"

             />



        <cn.carbs.android.avatarimageview.library.AvatarImageView
            android:id="@+id/mine_head"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:scaleType="centerCrop"
            app:layout_heightPercent="25%w"
            app:layout_widthPercent="25%w"
            />

        <TextView
            android:id="@+id/mine_petName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/mine_head"
            android:layout_centerHorizontal="true"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_marginTopPercent="3%w" />
        <TextView
            android:id="@+id/mine_sign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mine_petName"
            android:layout_centerHorizontal="true"
            android:textColor="@color/whitesmoke"
            android:textSize="13sp"
            app:layout_marginTopPercent="3%w" />

        <ImageView
            android:id="@+id/mine_qiehuanzhanghao"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_margin="15dp"
             />


    </com.zhy.android.percent.support.PercentRelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/mine_fangyuan"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="8dp"
        android:background="@drawable/layout_bg_sel">
        <ImageView
            android:id="@+id/fangyuan"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="5dp"/>
        <TextView
            android:id="@+id/fangyuantext"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawableRight="@drawable/next"
            android:textSize="18sp"
            android:gravity="center_vertical"
            android:textColor="@color/black"
            android:layout_marginLeft="10dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/mine_shoucang"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="8dp"
        android:background="@drawable/layout_bg_sel">
        <ImageView
            android:id="@+id/shoucang"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="5dp"/>
        <TextView
            android:id="@+id/shoucangtext"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawableRight="@drawable/next"
            android:textSize="18sp"
            android:gravity="center_vertical"
            android:textColor="@color/black"
            android:layout_marginLeft="10dp"
            />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/mine_Vip"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="10dp"
        android:visibility="gone"
        android:background="@drawable/layout_bg_sel">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="5dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawableRight="@drawable/next"
            android:textSize="18sp"
            android:gravity="center_vertical"
            android:textColor="@color/black"
            android:layout_marginLeft="10dp"
            android:text="会员中心"/>
    </LinearLayout>


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/mine_address"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="10dp"
        android:visibility="gone"
        android:background="@drawable/layout_bg_sel">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:id="@+id/tougao"
            android:layout_marginLeft="5dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawableRight="@drawable/next"
            android:textSize="18sp"
            android:gravity="center_vertical"
            android:textColor="@color/black"
            android:layout_marginLeft="10dp"
            android:text="收货地址管理"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/mine_dingdan"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="8dp"
        android:background="@drawable/layout_bg_sel">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:id="@+id/zhifu"
            android:layout_marginLeft="5dp"/>
        <TextView
            android:id="@+id/guanzhu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawableRight="@drawable/next"
            android:textSize="18sp"
            android:gravity="center_vertical"
            android:textColor="@color/black"
            android:layout_marginLeft="10dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/mine_bangzhu"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="8dp"
        android:background="@drawable/layout_bg_sel">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:id="@+id/jianjie"
            android:layout_marginLeft="5dp"/>
        <TextView
            android:id="@+id/bangzhu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawableRight="@drawable/next"
            android:textSize="18sp"
            android:gravity="center_vertical"
            android:textColor="@color/black"
            android:layout_marginLeft="10dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/mine_gerenshezhi"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="8dp"
        android:background="@drawable/layout_bg_sel">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/setting"
            android:layout_marginLeft="5dp"/>
        <TextView
            android:id="@+id/settings"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawableRight="@drawable/next"
            android:textSize="18sp"
            android:gravity="center_vertical"
            android:textColor="@color/black"
            android:layout_marginLeft="10dp"
            />
    </LinearLayout>



</com.zhy.android.percent.support.PercentLinearLayout>
