<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearlayout_total"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/layout_bg_sel"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="10dp">

    <cn.carbs.android.avatarimageview.library.AvatarImageView
        android:id="@+id/zixun_item_head"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginRight="10dp"
        android:scaleType="centerCrop" />

    <ImageView
        android:id="@+id/head_tip"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_alignBottom="@+id/zixun_item_head"
        android:layout_alignRight="@+id/zixun_item_head"
        android:layout_marginRight="5dp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/zixun_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:layout_toRightOf="@+id/zixun_item_head"
        android:textColor="@color/main_color"
        tools:text="hsafaskfh"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/job_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/zixun_item_name"
        android:layout_toRightOf="@+id/zixun_item_name"
        android:gravity="center"
        android:visibility="gone"
        android:layout_marginLeft="3dp"
        android:textColor="@color/white"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/sign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/zixun_item_head"
        android:layout_alignLeft="@+id/zixun_item_name"
        android:layout_toRightOf="@+id/zixun_item_head"
        android:gravity="center"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginBottom="3dp"
        android:textColor="#cc000000"
        android:textSize="13dp" />

    <TextView
        android:id="@+id/zixun_item_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/zixun_item_head"
        android:layout_marginTop="5dp"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxLines="2"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:textColor="@color/black"
        android:textSize="18dp" />

    <LinearLayout
        android:id="@+id/zixun_item_image_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/zixun_item_title"
        android:divider="@drawable/divider_home_layout"
        android:orientation="horizontal"
        android:showDividers="middle">

    </LinearLayout>

    <TextView
        android:id="@+id/zixun_item_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/zixun_item_image_layout"
        android:textColor="@color/gray"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:textSize="13dp" />


    <TextView
        android:id="@+id/zixun_item_pl_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:drawablePadding="3dp"
        android:layout_alignBottom="@+id/zixun_item_time"
        android:textSize="12sp" />
    <TextView
        android:id="@+id/zixun_item_like_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/zixun_item_pl_text"
        android:drawablePadding="3dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="1dp"
        android:layout_alignBottom="@+id/zixun_item_time"
        android:textSize="12sp" />


</RelativeLayout>
