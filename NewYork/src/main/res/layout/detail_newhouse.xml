<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="50dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:divider="@drawable/mdivider"
            android:orientation="vertical"
            android:showDividers="end|middle">

            <com.youth.banner.Banner
                android:id="@+id/home_detail_banner"
                android:layout_width="match_parent"
                android:layout_height="240dp">

            </com.youth.banner.Banner>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="@drawable/mdivider"
                android:orientation="vertical"
                android:paddingLeft="20dp"
                android:showDividers="middle">

                <TextView
                    android:id="@+id/home_detail_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/jiage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:textColor="@color/black"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:textColor="@color/black"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/use"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:textColor="@color/black"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/beginTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:textColor="@color/black"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/huxing"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:textColor="@color/black"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/kaifangshang"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:textColor="@color/black"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/nianxian"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:textColor="@color/black"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:textColor="@color/black"
                    android:textSize="16dp" />


            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:background="#eeeeee"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="房型格局"
                    android:textColor="@color/black"
                    android:textSize="16dp" />
                <ImageView
                    android:id="@+id/geju_image"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:background="#e6e6e6"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="位置及周边"
                    android:textColor="@color/black"
                    android:textSize="16dp" />
                <ImageView
                    android:id="@+id/weizhi_image"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:background="#e6e6e6"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:background="#eeeeee"/>

        </LinearLayout>
    </ScrollView>
    <ImageView
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:background="@drawable/black_background"
        android:id="@+id/back"
        android:onClick="onClick"
        android:layout_marginTop="35dp"
        android:src="@drawable/back"
        android:layout_marginLeft="10dp"
        android:padding="10dp"
        android:clickable="true"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#cccccc"
        android:layout_gravity="bottom"
        android:layout_marginBottom="50dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="bottom"
        android:divider="@drawable/mdivider"
        android:showDividers="beginning|middle">

        <TextView
            android:id="@+id/guanzhu"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:drawablePadding="3dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="关注"
            android:textColor="@color/black"
            android:textSize="14dp" />

        <View
            android:layout_width="1.5px"
            android:layout_height="match_parent"
            android:background="#dddddd" />

        <TextView
            android:id="@+id/fenxiang"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:drawablePadding="3dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="分享"
            android:textColor="@color/black"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/zixun"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/main_color"
            android:gravity="center"
            android:text="咨询经纪人"
            android:textColor="@color/white"
            android:textSize="16dp" />


    </LinearLayout>
</merge>