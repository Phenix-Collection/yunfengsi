<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <View
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/back_head"
        android:background="@color/main_color"
        />
    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/back"
        android:src="@drawable/back"
        android:background="@drawable/back_sel"
        android:padding="10dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/title"
        android:text="上传壁纸"
        android:textSize="18dp"
        app:layout_constraintTop_toTopOf="@+id/back_head"
        app:layout_constraintBottom_toBottomOf="@+id/back_head"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textColor="@color/white"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_user"
        android:textColor="@color/black"
        android:text="发布人"
        android:textSize="16dp"
        app:layout_constraintTop_toBottomOf="@+id/back_head"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_margin="15dp"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edt_user"
        android:textSize="16dp"
        android:focusable="false"
        android:textColor="@color/main_color"
        android:hint="请输入发布人昵称"
        android:background="@null"
        app:layout_constraintBaseline_toBaselineOf="@+id/txt_user"
        app:layout_constraintLeft_toRightOf="@+id/txt_user"
        android:layout_margin="15dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_image"
        android:textColor="@color/black"
        android:text="图片："
        android:textSize="16dp"
        app:layout_constraintTop_toBottomOf="@+id/txt_user"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_margin="15dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tip"
        android:textSize="12dp"
        android:textColor="@color/wordhuise"
        android:text="(必选,最多9张)"
        android:background="@null"
        app:layout_constraintBaseline_toBaselineOf="@+id/txt_image"
        app:layout_constraintLeft_toRightOf="@+id/txt_image"
        android:layout_margin="15dp"/>

    <com.yunfengsi.TouGao.mGridView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:numColumns="3"
        android:paddingLeft="15dp"
        android:verticalSpacing="10dp"
        android:id="@+id/tougao_grid"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/txt_image"
        android:layout_marginBottom="5dp">
    </com.yunfengsi.TouGao.mGridView>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#d6d6d6"
        app:layout_constraintTop_toBottomOf="@+id/txt_user"
        app:layout_constraintBottom_toTopOf="@+id/txt_image"/>
    <com.ruffian.library.RTextView
        android:id="@+id/upload"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        app:background_normal="@color/main_color"
        android:textColor="@color/white"
        android:textSize="16dp"
        android:gravity="center"
        android:text="上传"
        app:corner_radius="3dp"
        android:layout_margin="15dp"
        app:layout_constraintTop_toBottomOf="@+id/tougao_grid"
        app:background_pressed="#aafe963b"/>
</android.support.constraint.ConstraintLayout>