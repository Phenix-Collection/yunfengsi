<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <com.yunfengsi.View.Photo.PhotoViewPager
        android:id="@+id/paper"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#444444"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/place_black"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
         />


    <View
        android:id="@+id/head_bg"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/head_gradient_bg"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/back"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:background="@drawable/back_sel"
        android:padding="10dp"
        android:src="@drawable/cancle_white"
        android:visibility="invisible"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/more"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:background="@drawable/back_sel"
        android:padding="10dp"
        android:rotation="90"
        android:src="@drawable/more"
        android:visibility="invisible"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/place_black"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#f0000000"
        app:layout_constraintBottom_toBottomOf="parent" />

    <com.ruffian.library.RTextView
        android:id="@+id/download"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="2dp"
        android:text="下载"
        android:textSize="15dp"
        app:icon_direction="top"
        app:icon_height="20dp"
        app:icon_src_normal="@drawable/download"
        app:icon_width="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/collect"
        app:text_color_normal="@color/white"
        app:text_color_pressed="@color/white"
        app:background_pressed="#88888888"
        app:text_color_unable="#888888" />



    <com.ruffian.library.RTextView
        android:id="@+id/collect"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="2dp"
        android:text="收藏"
        android:textSize="15dp"
        app:icon_direction="top"
        app:icon_height="20dp"
        app:icon_src_normal="@drawable/collect_wall_paper"
        app:icon_width="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toRightOf="@+id/download"
        app:layout_constraintRight_toLeftOf="@+id/like"
        app:text_color_normal="@color/white"
        app:text_color_pressed="@color/white"
        app:background_pressed="#88888888"
        app:text_color_unable="#888888" />

    <com.ruffian.library.RTextView
        android:id="@+id/like"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="2dp"
        android:text="赞"
        android:textSize="15dp"
        app:icon_direction="top"
        app:icon_height="20dp"
        app:icon_src_normal="@drawable/encourage_wall_paper"
        app:icon_width="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toRightOf="@+id/collect"
        app:layout_constraintRight_toLeftOf="@+id/comment"
        app:text_color_normal="@color/white"
        app:text_color_pressed="@color/white"
        app:text_color_unable="#888888"
        app:background_pressed="#88888888"/>
    <com.ruffian.library.RTextView
        android:id="@+id/comment"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="2dp"
        android:text="评论"
        android:textSize="15dp"
        app:icon_direction="top"
        app:icon_height="20dp"

        app:icon_src_normal="@drawable/comment_wall_paper"
        app:icon_width="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toRightOf="@+id/like"
        app:layout_constraintRight_toLeftOf="@+id/delete"
        app:text_color_normal="@color/white"
        app:text_color_pressed="@color/white"
        app:text_color_unable="#888888"
        app:background_pressed="#88888888"/>

    <com.ruffian.library.RTextView
        android:id="@+id/delete"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="2dp"
        android:text="删除"
        android:textSize="15dp"
        app:icon_direction="top"
        app:icon_height="20dp"
        app:icon_src_normal="@drawable/delete_wallpaper"
        app:icon_width="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toRightOf="@+id/comment"
        app:layout_constraintRight_toRightOf="parent"
        app:text_color_normal="@color/white"
        app:text_color_pressed="@color/white"
        app:text_color_unable="#888888"
        app:background_pressed="#88888888" />


    <View
        android:id="@+id/user_place"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#aa444444"
        app:layout_constraintBottom_toTopOf="@+id/place_black" />


    <com.ruffian.library.RTextView
        android:id="@+id/user"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:drawablePadding="10dp"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:textSize="16dp"
        android:transitionName="@string/wallPaper_User_Head_ShareName"
        android:visibility="invisible"
        app:icon_direction="left"
        app:icon_height="40dp"
        app:icon_width="40dp"
        app:layout_constraintBottom_toBottomOf="@+id/user_place"
        app:text_color_normal="@color/white" />


    <com.ruffian.library.RTextView
        android:id="@+id/encourage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:drawablePadding="3dp"
        android:gravity="center"
        android:paddingBottom="6dp"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:paddingTop="6dp"
        android:textSize="18dp"
        app:background_normal="@color/main_color"
        app:background_pressed="#90fe963b"
        app:corner_radius="50dp"
        app:icon_direction="top"
        app:icon_height="30dp"

        app:icon_width="30dp"
        app:layout_constraintBottom_toBottomOf="@+id/user_place"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/user_place"
        app:text_color_normal="@color/white"
        app:text_color_pressed="@color/white"
        app:text_color_unable="@color/white"
        android:text="设置壁纸" />

</android.support.constraint.ConstraintLayout>