<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp"
    android:orientation="vertical"
    android:background="@drawable/edittext_background"
    android:layout_height="wrap_content">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/wordblack"
        android:textSize="16dp"
        android:text="请填写信息"/>

    <EditText
        android:id="@+id/user"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:gravity="center_vertical"
        android:maxLength="10"
        android:textSize="16dp"
        android:textColor="@color/black"
        android:background="@drawable/edittext_background"
        android:hint="请填写地址(10字内)"/>

    <EditText
        android:id="@+id/content"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:gravity="start|center_vertical"
        android:maxLength="10"
        android:textSize="16dp"
        android:textColor="@color/wordhuise"
        android:background="@drawable/edittext_background"
        android:hint="请填写立牌位人(10字内)"/>



    <com.ruffian.library.RTextView
        android:id="@+id/commit"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
       app:background_normal="@color/main_color"
        android:gravity="center"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        app:corner_radius="2dp"
        android:textSize="18dp"
        app:text_color_normal="@color/white"
        app:text_color_pressed="@color/light_huise"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/edittext_background"
        android:text="提交"/>

</LinearLayout>