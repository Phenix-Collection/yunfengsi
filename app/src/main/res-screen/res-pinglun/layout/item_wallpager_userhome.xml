<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:paddingTop="4dp"
    android:paddingBottom="2dp"
    android:paddingLeft="4dp"
    android:paddingRight="4dp"
    >


    <com.yunfengsi.View.UsefulImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:adjustViewBounds="true" />

    <com.ruffian.library.RTextView
        android:id="@+id/status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:gravity="center"
        android:paddingBottom="3dp"
        android:paddingTop="3dp"
        android:text="待审核"
        android:textSize="14dp"
        android:visibility="gone"
        app:background_normal="#b6b6b6"
        app:text_color_normal="@color/white" />

    <com.ruffian.library.RTextView
        android:id="@+id/delete"
        android:visibility="gone"
        android:layout_width="35dp"
        android:layout_height="35dp"
        app:icon_src_normal="@drawable/delete_wallpaper"
        app:icon_width="20dp"
        app:icon_height="20dp"
        app:corner_radius_bottom_left="5dp"
        android:layout_gravity="right"
        android:padding="7.5dp"
        app:background_normal="#80000000"
        app:background_pressed="#80666666"/>

    <ImageView
        android:id="@+id/collectImg"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_gravity="right|bottom"
        android:layout_margin="5dp"
        android:src="@drawable/collect_red"
        android:visibility="gone" />

</FrameLayout>