<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <uk.co.senab.photoview.PhotoView
        android:id="@+id/paper"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/place_black"
        app:layout_constraintTop_toTopOf="parent"
        android:transitionName="@string/wallPaper_ShareName" />

    <ImageView
        android:id="@+id/back"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/back_sel"
        android:padding="10dp"
        android:src="@drawable/cancle_white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/more"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/back_sel"
        android:src="@drawable/more"
        android:rotation="90"
        android:padding="10dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/place_black"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/black"
        app:layout_constraintBottom_toBottomOf="parent" />

    <com.ruffian.library.RTextView
        android:id="@+id/download"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:drawablePadding="2dp"
        android:gravity="center"
        android:text="下载"
        android:textSize="15dp"
        app:icon_direction="left"
        app:icon_height="16dp"
        app:icon_src_normal="@drawable/download"
        android:layout_marginRight="20dp"
        app:icon_width="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/comment"
        app:layout_constraintVertical_chainStyle="spread_inside"
        app:text_color_normal="@color/white"
        app:text_color_pressed="#888888" />

    <com.ruffian.library.RTextView
        android:id="@+id/comment"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:drawablePadding="2dp"
        android:gravity="center"
        android:text="评论"
        android:textSize="15dp"
        app:icon_direction="left"
        android:layout_marginRight="10dp"
        app:icon_height="16dp"
        app:icon_src_normal="@drawable/comment_wall_paper"
        app:icon_width="16dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/download"
        app:layout_constraintRight_toLeftOf="@+id/collect"
        app:layout_constraintVertical_chainStyle="spread_inside"
        app:text_color_normal="@color/white"
        app:text_color_pressed="#888888" />

    <com.ruffian.library.RTextView
        android:id="@+id/collect"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:drawablePadding="2dp"
        android:gravity="center"
        android:text="收藏"
        android:textSize="15dp"
        app:icon_direction="left"
        android:layout_marginLeft="10dp"
        app:icon_height="16dp"
        app:icon_src_normal="@drawable/collect_wall_paper"
        app:icon_width="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/comment"
        app:layout_constraintRight_toLeftOf="@+id/encourage"
        app:layout_constraintVertical_chainStyle="spread_inside"
        app:text_color_normal="@color/white"
        app:text_color_pressed="#888888" />

    <com.ruffian.library.RTextView
        android:id="@+id/encourage"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:drawablePadding="2dp"
        android:gravity="center"
        android:text="鼓励"
        android:textSize="15dp"
        app:icon_direction="left"
        android:layout_marginLeft="20dp"
        app:icon_height="16dp"
        app:icon_src_normal="@drawable/encourage_wall_paper"
        app:icon_width="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/collect"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_chainStyle="spread_inside"
        app:text_color_normal="@color/white"
        app:text_color_pressed="#888888" />


    <View
        android:id="@+id/user_place"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#cc444444"
        app:layout_constraintBottom_toTopOf="@+id/place_black" />


    <com.ruffian.library.RTextView
        android:id="@+id/user"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:drawablePadding="10dp"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:textSize="16dp"
        android:transitionName="@string/wallPaper_User_Head_ShareName"
        app:icon_direction="left"
        app:icon_height="40dp"
        app:icon_width="40dp"
        app:layout_constraintBottom_toBottomOf="@+id/user_place"
        app:text_color_normal="@color/white"
        android:text="哈哈哈" />


    <com.ruffian.library.RTextView
        android:id="@+id/like"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawablePadding="3dp"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textSize="12dp"
        app:icon_direction="top"
        app:icon_height="35dp"

        app:icon_width="35dp"
        app:layout_constraintBottom_toBottomOf="@+id/user_place"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/user_place"
        app:text_color_normal="@color/white"
        tools:text="99人赞" />

</android.support.constraint.ConstraintLayout>