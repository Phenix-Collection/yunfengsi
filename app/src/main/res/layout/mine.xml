<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:divider="@drawable/mdivider"
    android:orientation="vertical"
    android:showDividers="end|middle">


    <com.zhy.android.percent.support.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_heightPercent="50%w">

        <ImageView
            android:id="@+id/mine_gerenbeijing"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"

            />


        <cn.carbs.android.avatarimageview.library.AvatarImageView
            android:id="@+id/mine_head"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/white_stroke_1dp_bg"
            android:padding="1.5px"
            android:scaleType="centerCrop" />

        <com.yunfengsi.View.UsefulImageView
            android:id="@+id/qr"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/layout_bg_sel"
            android:padding="2dp"
            android:src="@drawable/mine_qr_code" />

        <ImageView
            android:id="@+id/level"
            android:layout_width="35dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/mine_head"
            android:layout_alignRight="@+id/mine_head"
            android:adjustViewBounds="true" />

        <TextView
            android:id="@+id/mine_petName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/mine_head"
            android:layout_centerHorizontal="true"
            android:text="昵称"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_marginTopPercent="3%w" />

        <TextView
            android:id="@+id/mine_sign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mine_petName"
            android:layout_centerHorizontal="true"
            android:textColor="@color/white"
            android:textSize="13sp"
            app:layout_marginTopPercent="3%w" />


    </com.zhy.android.percent.support.PercentRelativeLayout>

    <include
        android:id="@+id/header"
        layout="@layout/fragment_mine_header"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:visibility="gone"
         />

    <LinearLayout
        android:id="@+id/mine_shoucang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/layout_bg_sel"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="8dp"
        android:visibility="gone">

        <ImageView
            android:id="@+id/shoucang"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="5dp" />

        <TextView
            android:id="@+id/tv_shoucang"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:text="收藏"
            android:textColor="@color/black"
            android:textSize="16dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/mine_zhifu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/layout_bg_sel"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="8dp"
        android:visibility="gone">

        <ImageView
            android:id="@+id/zhifu"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="5dp" />

        <TextView
            android:id="@+id/tv_zhifu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:text="功德"
            android:textColor="@color/black"
            android:textSize="16dp" />
    </LinearLayout>

    <LinearLayout

        android:id="@+id/mine_gongxiu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/layout_bg_sel"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="8dp"
        android:visibility="gone">

        <ImageView
            android:id="@+id/gongxiu"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="5dp" />

        <TextView
            android:id="@+id/tv_gongxiu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:text="共修"
            android:textColor="@color/black"
            android:textSize="16dp" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/mine_gongke"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/layout_bg_sel"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="8dp"
        android:visibility="gone">

        <ImageView
            android:id="@+id/gongke"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="5dp" />

        <TextView
            android:id="@+id/tv_gongke"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:text="功课"
            android:textColor="@color/black"
            android:textSize="16dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/mine_huodong"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/layout_bg_sel"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="8dp"
        android:visibility="gone">

        <ImageView
            android:id="@+id/huodong"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="5dp" />

        <TextView
            android:id="@+id/tvhuodong"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:text="活动"
            android:textColor="@color/black"
            android:textSize="16dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/mine_gerenshezhi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/layout_bg_sel"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="8dp"
        android:visibility="gone">

        <ImageView
            android:id="@+id/setting"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="5dp" />

        <TextView
            android:id="@+id/tv_shezhi"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:text="设置"
            android:textColor="@color/black"
            android:textSize="16dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/mine_qiehuanzhanghao"
        android:layout_width="240dp"
        android:layout_height="35dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/button1_sel"
        android:gravity="center"
        android:text="退出登录"
        android:textColor="@color/white"
        android:textSize="15dp"
        android:visibility="gone" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f2f2f2">

    </android.support.v7.widget.RecyclerView>

</com.zhy.android.percent.support.PercentLinearLayout>
