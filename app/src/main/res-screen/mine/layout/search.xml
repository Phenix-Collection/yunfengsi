<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        android:paddingRight="10dp"
        android:background="@color/main_color"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        >
        <ImageView
            android:id="@+id/search_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="fitCenter"
            android:padding="10dp"

            android:layout_gravity="center_vertical"
            android:src="@drawable/back"
            android:background="@drawable/back_sel"/>

        <EditText
            android:id="@+id/search_edit"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="16dp"
            android:maxLines="1"
            android:paddingLeft="10dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/edittext_background"
            android:ellipsize="end"
            android:layout_marginLeft="5dp"
           />
        <TextView
            android:id="@+id/search_sousuo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:layout_marginLeft="10dp"

            android:layout_gravity="center_vertical"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/search_typelayout"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        android:layout_marginTop="45dp"
        android:paddingLeft="10dp"
        android:background="#f0f0f0"
        android:paddingRight="10dp"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/search_zixun"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@drawable/tag_bg"
            android:textColor="@color/black"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:textSize="16dp"/>
        <TextView
            android:layout_width="0dp"
            android:id="@+id/search_huodong"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@drawable/tag_bg"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:textSize="16dp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:id="@+id/search_gongyang"
            android:layout_marginRight="10dp"
            android:layout_height="wrap_content"
            android:background="@drawable/tag_bg"
            android:gravity="center"
            android:textSize="16dp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:id="@+id/search_cishan"
            android:layout_height="wrap_content"
            android:background="@drawable/tag_bg"
            android:gravity="center"
            android:textSize="16dp"/>
    </LinearLayout>
