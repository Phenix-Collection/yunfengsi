<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/main_color"
        android:id="@+id/relativeLayout">
        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/back"
            android:background="@drawable/back_sel"
            android:padding="10dp"
            android:id="@+id/nianfo_chanhui_back"
            />
        <TextView
            android:id="@+id/nianfo_title"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:textSize="16sp" />
        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/fenxiang2"
            android:padding="10dp"
            android:clickable="true"
            android:onClick="onClick"
            android:layout_alignParentRight="true"
            android:background="@drawable/back_sel"
            android:id="@+id/Share"
            />
    </RelativeLayout>
    <android.support.v4.widget.SwipeRefreshLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom"
        android:layout_marginTop="40dp"
        android:id="@+id/chanhui_swip">

        <com.yunfengsi.View.LoadMoreListView
            android:id="@+id/nianfo_home_chanhui_listview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/relativeLayout"
            android:divider="@drawable/mdivider"
            android:scrollbars="none">

        </com.yunfengsi.View.LoadMoreListView>
    </android.support.v4.widget.SwipeRefreshLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1.5px"
        android:background="#cccccc"
        android:layout_above="@+id/bottom"
        />
    <RelativeLayout
        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:layout_alignParentBottom="true"
        android:background="#f6f6f6"
        android:paddingLeft="10dp"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:clipChildren="false"
        android:paddingRight="10dp">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:id="@+id/nianfo_home_chanhui_content"
            android:hint="请输入忏悔内容(200字以内)"
            android:gravity="start"
            android:textSize="14dp"
            android:maxLength="200"
            android:background="@drawable/edittext_background"
            android:textColor="@color/black"
            android:textColorHint="#999999"
            android:padding="8dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:id="@+id/nianfo_home_chanhui_commit"
           android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:gravity="center"
            android:background="@drawable/button1_sel"
            android:clickable="true"/>
        <com.yunfengsi.View.DiffuseView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/audio"
            app:diffuse_color="@color/main_color"
            app:diffuse_coreImage="@drawable/auido_white"
            app:diffuse_width="3"
            app:diffuse_maxWidth="100"
            app:diffuse_coreRadius="20dp"
            android:layout_toRightOf="@+id/nianfo_home_chanhui_commit"
            android:layout_alignParentBottom="true"
            app:diffuse_speed="100"
            android:layout_marginLeft="20dp"
            app:diffuse_coreColor="@color/main_color"
           />
    </RelativeLayout>

    <com.ruffian.library.RTextView
        android:id="@+id/tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        app:icon_src_normal="@drawable/load_nothing"
        app:icon_width="100dp"
        app:icon_height="100dp"
        app:icon_direction="top"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:textColor="@color/black"
        android:textSize="14dp"
        android:text="请检查网络连接"/>

</com.zhy.android.percent.support.PercentRelativeLayout>
