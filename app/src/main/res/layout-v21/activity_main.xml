<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/main_color"
        android:gravity="center_vertical"
        android:elevation="8dp"
        >

        <ImageView
            android:id="@+id/title_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="fitCenter"
            android:padding="10dp"
            android:src="@drawable/back"
            android:background="@drawable/back_sel"
            android:visibility="gone"
            />
        <TextView
            android:id="@+id/title_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:layout_gravity="center"
            android:textColor="@color/white"/>
        <ImageView
            android:id="@+id/title_image2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="end"

            android:scaleType="centerCrop"
            android:padding="7dp"
            android:src="@drawable/search"
            android:layout_marginEnd="45dp"
            android:background="@drawable/back_sel"
            />
        <ImageView
            android:id="@+id/title_image3"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="centerCrop"
            android:layout_gravity="end"
            android:padding="7dp"
            android:background="@drawable/back_sel"
            android:src="@drawable/home_add_more"
            android:layout_marginEnd="5dp"
            />
        <ImageView
            android:id="@+id/mine_pinglun"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/pinglun_sel"
            android:padding="5dp"
            android:layout_marginStart="5dp"/>

        <com.ruffian.library.RTextView
            android:id="@+id/setting"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_gravity="end"
            app:text_color_normal="@color/white"
            app:text_color_pressed="@color/gray"
            android:textSize="18dp"
            android:paddingStart="10dp"
            android:visibility="gone"
            android:paddingEnd="10dp"
            android:text="设置"/>
    </FrameLayout>
    <android.support.v4.view.ViewPager
        android:id="@+id/home_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="50dp"
       >

    </android.support.v4.view.ViewPager>



    <TextView
        android:id="@+id/test"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/red"
        android:gravity="center"
        android:textSize="22dp"
        android:textColor="@color/white"
        android:visibility="gone"
        android:layout_gravity="bottom"
        android:layout_marginBottom="50dp"
        android:text="测试入口"/>

    <View android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/wordhuise"
        android:layout_gravity="bottom"
        android:layout_marginBottom="50dp"
        />
    <android.support.design.widget.TabLayout
        android:id="@+id/home_bottom_tablayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:tabSelectedTextColor="@color/main_color"
        app:tabBackground="@null"
        app:tabIndicatorHeight="0dp"
        android:layout_gravity="bottom"
        android:background="@color/white"
        >

    </android.support.design.widget.TabLayout>
</merge>
