<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:background="@drawable/layout_bg_sel"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <ImageView
        android:id="@+id/hot_two_item_image"
        android:layout_width="136dp"
        android:layout_height="102dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:background="#e6e6e6"
        />
    <TextView
        android:id="@+id/hot_two_item_title"
        android:layout_toRightOf="@+id/hot_two_item_image"
        android:layout_alignTop="@+id/hot_two_item_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:maxLines="2"
        tools:text="标题碧桃就家里附近谁离开房间l"
        android:ellipsize="end"
        app:layout_maxHeightPercent="23%w"
        android:textColor="@color/black"
        android:layout_marginLeft="10dp"
        />
    <TextView
        android:id="@+id/hot_two_item_abs"
        android:layout_alignLeft="@+id/hot_two_item_title"
        android:layout_below="@+id/hot_two_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12dp"
        tools:text="jianjie fsd lfjskl j碧桃就家里附近谁离开房间l"
        android:ellipsize="end"
        android:maxLines="3"
        android:textColor="@color/wordhuise"
        />
    <TextView
        android:id="@+id/hot_two_item_type"
        android:layout_below="@+id/hot_two_item_image"
        android:layout_alignLeft="@+id/hot_two_item_image"
        android:layout_alignTop="@+id/hot_two_item_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10dp"
        tools:text="图文"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        android:paddingTop="1.5dp"
        android:paddingBottom="1.5dp"
        android:background="@drawable/button1_shape"
        android:textColor="@color/white"

        />
    <TextView
        android:id="@+id/hot_two_item_Plnum"
        android:layout_width="wrap_content"
        android:layout_below="@+id/hot_two_item_image"
        android:layout_height="wrap_content"
        android:textSize="12dp"
        android:drawablePadding="5dp"
        tools:text="云峰寺"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="5dp"
        />
    <TextView
        android:id="@+id/hot_two_item_ctr"
        android:layout_alignBottom="@+id/hot_two_item_Plnum"
        android:layout_toRightOf="@+id/hot_two_item_Plnum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12dp"
        tools:text="阅读量"
        android:drawablePadding="3dp"
        android:layout_marginRight="8dp"
        />
    <TextView
        android:id="@+id/hot_two_item_likes"
        android:layout_alignBottom="@+id/hot_two_item_Plnum"
        android:layout_toRightOf="@+id/hot_two_item_ctr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12dp"
        tools:text="点赞"
        android:drawablePadding="3dp"
        android:layout_marginRight="8dp"
        />
    <TextView
        android:id="@+id/hot_two_item_comments"
        android:layout_alignBottom="@+id/hot_two_item_Plnum"
        android:layout_toRightOf="@+id/hot_two_item_likes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12dp"
        android:drawablePadding="3dp"
        tools:text="评论"
        android:layout_marginRight="8dp"
        />
    <TextView
        android:id="@+id/hot_two_item_time"
        android:layout_alignBottom="@+id/hot_two_item_Plnum"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        tools:text="时间"
        android:layout_marginRight="8dp"
        android:layout_height="wrap_content"
        android:textSize="12dp"
        />
</RelativeLayout>
