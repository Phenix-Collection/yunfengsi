<?xml version="1.0" encoding="utf-8"?>
<com.mcxtzhang.swipemenulib.SwipeMenuLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >
    
    <RelativeLayout
        android:id="@+id/content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:paddingLeft="10dp">
        
        
    

    <cn.carbs.android.avatarimageview.library.AvatarImageView
        android:id="@+id/nianfo_item_ima"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="2dp"
        android:scaleType="centerCrop"
       />


    <TextView
        android:id="@+id/nianfo_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/nianfo_item_ima"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/nianfo_item_ima"
        android:textColor="@color/main_color"
        android:layout_toLeftOf="@+id/nianfo_item_date"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/nianfo_item_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/nianfo_item_ima"
        android:layout_alignLeft="@+id/nianfo_item_name"
        android:textSize="13dp"
        android:layout_toLeftOf="@+id/nianfo_item_share"
        android:textColor="@color/wordhuise"/>

    <TextView
        android:id="@+id/nianfo_item_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/nianfo_item_name"
        android:layout_alignParentRight="true"
        android:layout_marginRight="4dp"
        android:textSize="13dp"
        android:textColor="@color/huise"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nianfo_item_share"
        android:layout_marginLeft="10dp"
        android:textSize="14dp"
        android:gravity="center"
        android:text="回向给众生"
        android:layout_alignBottom="@+id/nianfo_item_ima"
        android:layout_marginRight="4dp"
        android:layout_alignParentRight="true"
        android:textColor="@drawable/sel_text_color"
        />
    </RelativeLayout>
    
    <TextView
        android:id="@+id/delete"
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:textColor="@color/white"
        android:gravity="center"
        android:text="删除"
        android:textSize="18dp"
        android:background="@color/red"/>
</com.mcxtzhang.swipemenulib.SwipeMenuLayout>