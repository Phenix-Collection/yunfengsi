<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_corner_white_bg"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <cn.carbs.android.avatarimageview.library.AvatarImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/head"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@color/lightgray"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/petName"
        android:textSize="16dp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/head"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="10dp"

        />
    
    <com.ruffian.library.RTextView
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:id="@+id/checkDetail"
        android:textColor="@color/white"
        app:background_normal="#00aa00"
        app:background_pressed="#008000"
        app:corner_radius="40dp"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/petName"
        app:layout_constraintRight_toLeftOf="@+id/applyFriend"
        android:textSize="14dp"
        android:text="查看主页"
        />


    <com.ruffian.library.RTextView
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:id="@+id/applyFriend"
        android:textColor="@color/white"
        app:background_normal="@color/main_color"
        app:background_pressed="#90fe963b"
        app:background_unable="#c6c6c6"
        app:corner_radius="40dp"
        android:gravity="center"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintTop_toBottomOf="@+id/petName"
        app:layout_constraintLeft_toRightOf="@+id/checkDetail"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="14dp"
        android:text="申请好友"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="10dp"
        />
    <com.ruffian.library.RTextView
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:id="@+id/cancel"
        android:textColor="@color/white"
        app:background_normal="@color/gray"
        app:background_pressed="@color/lightgray"
        app:corner_radius="40dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/checkDetail"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textSize="14dp"
        android:text="取消"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="15dp"
        />
</android.support.constraint.ConstraintLayout>