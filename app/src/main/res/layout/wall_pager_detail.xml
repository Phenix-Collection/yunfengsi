<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <uk.co.senab.photoview.PhotoView
        android:id="@+id/paper"
        android:visibility="invisible"
        android:background="#444444"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/place_black"
        app:layout_constraintTop_toTopOf="parent"
        android:transitionName="@string/wallPaper_ShareName" />

    <ImageView
        android:id="@+id/back"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/back_sel"
        android:padding="10dp"
        android:visibility="invisible"
        android:src="@drawable/cancle_white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/more"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/back_sel"
        android:src="@drawable/more"
        android:rotation="90"
        android:padding="10dp"
        android:visibility="invisible"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/place_black"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#f0000000"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent" />

    <com.ruffian.library.RTextView
        android:id="@+id/download"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:drawablePadding="2dp"
        android:gravity="center"
        android:text="下载"
        android:textSize="15dp"
        app:icon_direction="left"
        app:icon_height="16dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:visibility="invisible"
        app:icon_src_normal="@drawable/download"
        android:layout_marginRight="10dp"
        app:icon_width="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/collect"
        app:layout_constraintVertical_chainStyle="spread_inside"
        app:text_color_normal="@color/white"
        app:text_color_pressed="#888888"
        app:text_color_unable="#888888"/>

