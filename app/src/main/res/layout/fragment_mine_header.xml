<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="42dp"
    android:id="@+id/header"
    android:background="@drawable/layout_bg_sel"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <com.ruffian.library.RTextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/name"
        android:text="我的云豆"
        android:gravity="center_vertical"
        android:textSize="18dp"
        android:textColor="@color/black"
        android:drawablePadding="10dp"
        android:paddingLeft="10dp"
        app:icon_direction="left"
        app:icon_width="35dp"
        app:icon_height="35dp"
        app:icon_src_normal="@raw/yundou"
        />


    <com.ruffian.library.RTextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/num"
        android:text=""
        android:layout_gravity="right"
        android:gravity="center_vertical"
        android:textSize="18dp"
        android:textColor="@color/black"
        app:icon_direction="right"
        app:icon_width="35dp"
        app:icon_height="35dp"
        app:icon_src_normal="@drawable/next"

        />
</FrameLayout>