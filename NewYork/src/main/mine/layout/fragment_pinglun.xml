<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v4.widget.SwipeRefreshLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/swip">

        <com.maimaizu.View.LoadMoreListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:dividerHeight="1.5px"
            android:divider="@drawable/mdivider"
            android:id="@+id/listview">

        </com.maimaizu.View.LoadMoreListView>

    </android.support.v4.widget.SwipeRefreshLayout>
    <FrameLayout
        android:id="@+id/frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#70000000"
        android:visibility="gone"
        >


        <LinearLayout
            android:id="@+id/zixun_detail_toPinglun_buttom_layout"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center_vertical"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:background="#ffffff"
            android:layout_gravity="bottom"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/zixun_detail_apply_edt"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@drawable/next"
                android:ellipsize="start"
                android:hint="写入你的回复(300字以内)"
                android:maxLength="300"
                android:maxLines="4"
                android:paddingLeft="5dp"
                android:textSize="14dp"
                />

            <TextView
                android:id="@+id/zixun_detail_fasong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:gravity="center"
                android:text="发送"
                android:textColor="@color/white"
                android:background="@drawable/button1_sel"
                android:textSize="15dp" />


        </LinearLayout>
    </FrameLayout>

</FrameLayout>