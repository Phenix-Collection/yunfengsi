<?xml version="1.0" encoding="utf-8"?>
<com.mcxtzhang.swipemenulib.SwipeMenuLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/swipview">

    <RelativeLayout
        android:id="@+id/content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:paddingLeft="10dp">



    <cn.carbs.android.avatarimageview.library.AvatarImageView
        android:id="@+id/nianfo_item_ima"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="2dp"
        android:scaleType="centerCrop"
        />


    <TextView
        android:id="@+id/nianfo_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/nianfo_item_ima"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/nianfo_item_ima"
        android:textColor="@color/main_color"
        android:textSize="16dp"
        tools:text="标题" />

    <TextView
        android:id="@+id/nianfo_item_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/nianfo_item_name"
        android:layout_alignTop="@+id/nianfo_item_name"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@+id/nianfo_item_name"
        android:background="@drawable/status_completed_shape_fayuan"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="12dp"
        tools:text="状态" />

    <TextView
        android:id="@+id/nianfo_item_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/nianfo_item_ima"
        android:layout_alignLeft="@+id/nianfo_item_name"
        android:layout_toLeftOf="@+id/nianfo_item_share"
        android:textColor="@color/wordhuise"
        android:textSize="13dp" />

    <TextView
        android:id="@+id/nianfo_item_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/nianfo_item_name"
        android:layout_alignParentRight="true"
        android:layout_marginRight="4dp"
        android:textColor="@color/huise"
        android:textSize="13dp" />

    <TextView
        android:id="@+id/nianfo_item_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/nianfo_item_ima"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="4dp"
        android:gravity="center"
        android:text="回向给众生"
        android:textColor="@drawable/sel_text_color"
        android:textSize="14dp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/delete"
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:textColor="@color/white"
        android:gravity="center"
        android:text="删除"
        android:textSize="18dp"
        android:background="@color/red"/>
</com.mcxtzhang.swipemenulib.SwipeMenuLayout>