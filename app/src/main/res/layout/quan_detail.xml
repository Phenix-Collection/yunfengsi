<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent">

    <include layout="@layout/title_default"/>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="50dp"
        android:layout_height="match_parent">

    <ImageView
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/image"
        tools:src="@drawable/mine_banner"
        android:adjustViewBounds="true"
        />

    <TextView
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/title"
        android:textSize="16dp"
        android:textColor="@color/black"
        tools:text="念佛七"/>

    <TextView
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cost"
        android:textSize="14dp"
        android:textColor="@color/red"
        tools:text="需要花费100云豆,  库存 2000张"/>
    <TextView
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/date"
        android:textSize="12dp"
        android:textColor="@color/wordhuise"
        tools:text="有效期：2018-10-9至2019-03-29"/>

    <TextView
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/info"
        android:textSize="14dp"
        android:lineSpacingExtra="5dp"
        android:textColor="@color/wordblack"
        tools:text="有效期：2018-10-9至2019-03-29杜绝浪费的时间傅雷家书雷锋精神垃圾分类"/>
    </LinearLayout>


    <com.ruffian.library.RTextView
        android:id="@+id/duihuan"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:background_normal="@color/main_color"
        android:text="立即兑换"
        android:gravity="center"
        android:textSize="20dp"
        app:text_color_normal="@color/white"
        app:text_color_pressed="@color/light_huise"
        app:text_color_unable="@color/wordhuise"
        app:background_unable="@color/light_huise"
        android:layout_gravity="bottom"/>

</merge>