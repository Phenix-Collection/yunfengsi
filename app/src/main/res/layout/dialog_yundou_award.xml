<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">


    <com.ruffian.library.RTextView
        android:id="@+id/awardNum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:drawablePadding="10dp"
        app:corner_radius_top_left="10dp"
        app:corner_radius_top_right="10dp"
        tools:text="云豆  +5"
        android:gravity="center"
        android:textSize="22dp"
        app:icon_direction="top"
        app:icon_width="50dp"
        app:icon_height="50dp"
        android:textColor="@color/black"
        app:icon_src_normal="@drawable/yundou_white"
        app:background_normal="@color/main_color"
        android:paddingBottom="10dp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        android:background="@drawable/shape_black">

        <TextView
            android:id="@+id/message"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textColor="@color/main_color"
            tools:text="通过完成{每日任务}，即可获得云豆奖励"

            />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:background="@drawable/shape_black">

            <com.ruffian.library.RTextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:id="@+id/commit"
                android:text="确定"
                android:textSize="20dp"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:minWidth="120dp"
                android:textColor="@color/black"
                app:background_normal="@color/main_color"
                app:background_pressed="#fe8000"
                app:corner_radius="25dp"/>


            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/award"
                android:layout_gravity="bottom|right"/>
        </FrameLayout>
    </LinearLayout>


</LinearLayout>