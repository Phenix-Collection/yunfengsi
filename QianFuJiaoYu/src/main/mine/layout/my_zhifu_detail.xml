<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">





            <include layout="@layout/title_default"></include>

            <android.support.v4.widget.SwipeRefreshLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/swip"
                android:layout_marginTop="40dp">
                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:orientation="vertical"

                        android:padding="10dp">
                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/loaction"
                            android:layout_marginLeft="10dp"
                            android:layout_centerVertical="true"
                            android:id="@+id/icon"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:id="@+id/username"
                            android:text="收货人及联系方式"
                            android:layout_toRightOf="@+id/icon"
                            android:layout_marginLeft="10dp"
                            android:textColor="@color/black"
                            android:textSize="15dp"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:layout_below="@+id/username"
                            android:layout_alignLeft="@+id/username"
                            android:id="@+id/address"
                            android:layout_centerVertical="true"
                            android:textColor="@color/black"
                            android:text="收货地址"
                            android:textSize="15dp"/>

                    </RelativeLayout>
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/line_five"/>
                    <LinearLayout
                        android:id="@+id/pintuan"
                        android:layout_width="match_parent"
                        android:visibility="gone"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="10dp"
                           android:padding="7dp"
                            android:lineSpacingExtra="5dp"
                            android:background="@color/white"
                            android:id="@+id/time_snr"/>
                        <RelativeLayout
                            android:background="#f0f0f0"
                            android:layout_width="match_parent"
                            android:padding="12dp"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/sut_title"
                                android:layout_centerVertical="true"
                                android:textColor="@color/hotpink"
                                android:layout_toLeftOf="@+id/sut_money"
                                android:layout_marginRight="10dp"
                                android:textSize="14dp"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/sut_money"
                                android:textSize="14dp"
                                android:layout_centerVertical="true"
                                android:layout_alignParentRight="true"
                                android:textColor="@color/black"/>

                        </RelativeLayout>
                        <TextView
                            android:id="@+id/rest_time"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_below="@+id/sut_money"
                            android:gravity="center"
                            android:textSize="14dp"
                            android:textColor="@color/wordhuise"
                            />
                    </LinearLayout>
                    <com.qianfujiaoyu.View.mItemListview
                        android:id="@+id/listview"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        >
                    </com.qianfujiaoyu.View.mItemListview>

                    <LinearLayout
                        android:id="@+id/putong"
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:background="@color/white">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/time"
                                android:text="时间"
                                android:layout_toLeftOf="@+id/status"
                                android:textColor="@color/black"
                                android:textSize="16dp"/>
                            <TextView
                                android:id="@+id/status"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="14dp"
                                android:text="支付状态"
                                android:layout_alignParentRight="true"/>
                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:background="@color/white"
                            >
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="订单编号"
                                android:layout_toLeftOf="@+id/snr"
                                android:textColor="@color/black"
                                android:textSize="14dp"/>
                            <TextView
                                android:id="@+id/snr"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="14dp"
                                android:text="订单编号"
                                android:textColor="@color/black"
                                android:layout_alignParentRight="true"/>
                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:background="@color/white"
                            >
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="商品总价"
                                android:layout_toLeftOf="@+id/total"
                                android:textColor="@color/black"
                                android:textSize="14dp"/>
                            <TextView
                                android:id="@+id/total"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="14dp"
                                android:text="商品总价"
                                android:layout_alignParentRight="true"/>
                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:background="@color/white"
                            >
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="店铺优惠"
                                android:layout_toLeftOf="@+id/youhui"
                                android:textColor="@color/black"
                                android:textSize="14dp"/>
                            <TextView
                                android:id="@+id/youhui"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="14dp"
                                android:text="店铺优惠"
                                android:layout_alignParentRight="true"/>
                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:background="@color/white"
                            >
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="订单总价"
                                android:layout_toLeftOf="@+id/money_total"
                                android:textColor="@color/black"
                                android:textSize="14dp"/>
                            <TextView
                                android:id="@+id/money_total"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="14dp"
                                android:text="订单总价"
                                android:textColor="@color/black"
                                android:layout_alignParentRight="true"/>
                        </RelativeLayout>
                        <android.support.v4.widget.Space
                            android:layout_width="match_parent"
                            android:layout_height="1px" />
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:background="@color/white"
                            >
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="实付款"
                                android:layout_toLeftOf="@+id/pay"
                                android:textColor="@color/black"
                                android:textSize="14dp"/>
                            <TextView
                                android:id="@+id/pay"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="14dp"
                                android:text="实付款"
                                android:textColor="@color/red"
                                android:layout_alignParentRight="true"/>
                        </RelativeLayout>
                    </LinearLayout>



                </LinearLayout>
                </ScrollView>
            </android.support.v4.widget.SwipeRefreshLayout>





</merge>
