<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/title_layout"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/main_color">


        <ImageView
            android:id="@+id/back"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@drawable/back_sel"
            android:padding="10dp"
            android:src="@drawable/back" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="10dp"
            android:text="义卖详情"
            android:textColor="@color/white"
            android:textSize="18dp" />

        <ImageView
            android:id="@+id/share"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_gravity="right"
            android:layout_marginRight="45dp"
            android:background="@drawable/back_sel"
            android:padding="10dp"
            android:src="@drawable/fenxiang2" />

        <ImageView
            android:id="@+id/collect"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_gravity="right"
            android:padding="8dp"
            android:src="@drawable/shoucang_selector" />


    </FrameLayout>


    <com.yunfengsi.View.SlideDetailsLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:percent="0.3"
        app:default_panel="front"
        app:duration="300"
        app:need_cut_height="45dp">
    <ScrollView
        android:layout_width="match_parent"
        android:background="@color/blue"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/front"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="vertical">



            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/main_color"
                android:textColor="@color/white"
                android:textSize="18dp"
                android:gravity="center"
                android:text="上拉加载图文详情"/>
        </LinearLayout>

    </ScrollView>

    <WebView
        android:id="@+id/bebind"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </WebView>

    </com.yunfengsi.View.SlideDetailsLayout>
</LinearLayout>









