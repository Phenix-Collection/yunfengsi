<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:id="@+id/zhuce_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/zhuce_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="6dp"
            android:src="@drawable/back_black" />
        <View
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"/>

        <ImageView
            android:id="@+id/bangzhu"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:padding="8dp"
            android:src="@drawable/wenhao" />
    </LinearLayout>

    <ImageView
        android:id="@+id/activity_register_imageview"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:scaleType="fitCenter" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="35dp"
                android:orientation="horizontal"
                android:visibility="gone"

                android:background="@drawable/login_toggle_bg"
                android:padding="1dp"
                >
                <TextView
                    android:id="@+id/zhuce_phone"
                    android:layout_width="149dp"
                    android:layout_height="match_parent"
                    android:text="手机注册"
                    android:gravity="center"
                    android:textColor="@color/gray"
                    android:textSize="16sp"
                    android:background="@drawable/login_left_bg"/>
                <TextView
                    android:id="@+id/zhuce_email"
                    android:layout_width="149dp"
                    android:layout_height="match_parent"
                    android:text="邮箱注册"
                    android:textColor="@color/gray"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:background="@drawable/login_right_bg"/>
            </LinearLayout>


        <TextView
            android:id="@+id/country_code"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:text=""
            android:onClick="onClick"
            android:background="@drawable/back_sel"
            android:clickable="true"
            android:textColor="@color/black"

            />
        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/userpic" />

                <EditText
                    android:id="@+id/Zhuce_phonenum"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:hint="手机号码/PhoneNumber"
                    android:padding="5dp"
                    android:textSize="15dp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#e2151515" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:id="@+id/yanzhen_layout"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/yanzhenma" />

                <EditText
                    android:id="@+id/Zhuce_Mid"
                    android:layout_width="145dp"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:hint="验证码/Code"
                    android:inputType="number"
                    android:maxLength="6"
                    android:padding="5dp"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/Zhuce_getMid"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/black_stroke_shape"
                    android:clickable="true"
                    android:gravity="center"
                    android:text="获取验证码"
                    android:textColor="#000000" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#e2151515" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/password" />

                <EditText
                    android:id="@+id/Zhuce_password"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:hint="密码/Password"
                    android:inputType="textPassword"
                    android:maxLength="16"
                    android:minEms="6"
                    android:padding="5dp"
                    android:textSize="15dp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#e2151515" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/password" />

                <EditText
                    android:id="@+id/Zhuce_password2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:hint="确认密码/Password"
                    android:inputType="textPassword"
                    android:maxLength="16"
                    android:minEms="6"
                    android:padding="5dp"
                    android:textSize="15dp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#e2151515" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp" />

    <Button
        android:id="@+id/Zhuce_submit"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:background="@drawable/black_stroke_shape"
        android:text="注册"
        android:textSize="17dp" />
</LinearLayout>
