<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/mine_shoucang_item_image"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_widthPercent="30%w"
        app:layout_heightPercent="20%w"
        android:layout_margin="5dp"
        />
    <TextView
        android:id="@+id/mine_shoucang_item_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/mine_shoucang_item_image"
        android:layout_alignTop="@+id/mine_shoucang_item_image"
        android:layout_toLeftOf="@+id/mine_shoucang_item_type"
        android:maxLines="1"
        android:ellipsize="end"
        android:textSize="13sp"
        android:textColor="@color/dodgerblue"
        android:layout_marginBottom="3dp"/>
    <TextView
        android:id="@+id/mine_shoucang_item_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:textColor="@color/colorAccent"
        android:layout_alignTop="@+id/mine_shoucang_item_image"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"/>
    <TextView
        android:id="@+id/mine_shoucang_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="dsfsdf"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_alignLeft="@+id/mine_shoucang_item_user"
        android:layout_below="@+id/mine_shoucang_item_user"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:layout_marginBottom="5dp"/>
    <TextView
        android:id="@+id/mine_shoucang_item_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/mine_shoucang_item_user"
        android:layout_alignBottom="@+id/mine_shoucang_item_image"
        android:textSize="12sp"/>

</com.zhy.android.percent.support.PercentRelativeLayout>
