    <com.ruffian.library.RTextView
        android:id="@+id/collect"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:drawablePadding="2dp"
        android:gravity="center"
        android:text="收藏"
        android:textSize="15dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:visibility="invisible"
        app:icon_direction="left"
        android:layout_marginLeft="5dp"
        app:icon_height="16dp"
        app:icon_src_normal="@drawable/collect_wall_paper"
        app:icon_width="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/download"
        app:layout_constraintRight_toLeftOf="@+id/encourage"
        app:layout_constraintVertical_chainStyle="spread_inside"
        app:text_color_normal="@color/white"
        app:text_color_pressed="#888888"
        app:text_color_unable="#888888"/>

    <com.ruffian.library.RTextView
        android:id="@+id/encourage"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:drawablePadding="2dp"
        android:gravity="center"
        android:text="设置"
        android:visibility="invisible"
        android:textSize="15dp"
        app:icon_direction="left"
        android:layout_marginLeft="10dp"
        app:icon_height="16dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        app:icon_src_normal="@drawable/encourage_wall_paper"
        app:icon_width="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/collect"
        app:layout_constraintRight_toLeftOf="@+id/delete"
        app:layout_constraintVertical_chainStyle="spread_inside"
        app:text_color_normal="@color/white"
        app:text_color_pressed="#888888" />
    <com.ruffian.library.RTextView
        android:id="@+id/delete"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:drawablePadding="2dp"
        android:gravity="center"
        android:text="删除"
        android:visibility="invisible"
        android:textSize="15dp"
        app:icon_direction="left"
        android:layout_marginLeft="10dp"
        app:icon_height="16dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        app:icon_src_normal="@drawable/delete_wallpaper"
        app:icon_width="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/encourage"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_chainStyle="spread_inside"
        app:text_color_normal="@color/white"
        app:text_color_pressed="#888888" />


    <View
        android:id="@+id/user_place"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#aa444444"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/place_black" />


    <com.ruffian.library.RTextView
        android:id="@+id/user"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:drawablePadding="10dp"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:textSize="16dp"
        android:visibility="invisible"
        android:transitionName="@string/wallPaper_User_Head_ShareName"
        app:icon_direction="left"
        app:icon_height="40dp"
        app:icon_width="40dp"
        app:layout_constraintBottom_toBottomOf="@+id/user_place"
        app:text_color_normal="@color/white"
         />


    <com.ruffian.library.RTextView
        android:id="@+id/like"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawablePadding="3dp"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textSize="12dp"
        app:icon_direction="top"
        android:visibility="invisible"
        app:icon_height="30dp"
        app:icon_src_normal="@drawable/white_like"
        app:icon_width="30dp"
        app:layout_constraintBottom_toBottomOf="@+id/user_place"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/user_place"
        app:text_color_normal="@color/white"
        tools:text="99人赞" />

</android.support.constraint.ConstraintLayout>