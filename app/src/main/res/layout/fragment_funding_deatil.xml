<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:visibility="gone"
        android:id="@+id/tip"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/pull_to_comments"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="45dp"
        android:visibility="gone"
        android:scrollbars="none" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_gravity="bottom"
        android:layout_marginBottom="45dp"
        android:background="@color/huise" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_gravity="bottom"
        android:background="@color/white"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/pinglun"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/back_sel"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/pinglun" />

            <TextView
                android:id="@+id/pltv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="16dp" />
        </LinearLayout>

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:background="#aaaaaa" />

        <LinearLayout
            android:id="@+id/fenxiangb"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/back_sel"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/fenxiangb" />

            <TextView
                android:id="@+id/fxtv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="16dp" />
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/fund_status"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/green_circle_shape"
        android:gravity="center"
        android:layout_gravity="center_horizontal|bottom"
        android:textColor="@color/white"
        android:textSize="15dp" />
    <FrameLayout
        android:id="@+id/frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#70000000"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/fund_detail_toPinglun_buttom_layout"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_gravity="bottom"
            android:background="#ffffff"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="5dp">
            <ImageView
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:id="@+id/toggle_audio_word"
                android:layout_marginRight="5dp"
                android:src="@drawable/sel_audio_word_toggle"
                android:padding="8dp"/>

            <TextView
                android:id="@+id/audio_button"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/sel_audio_button"
                android:layout_marginRight="5dp"
                android:text="按住 说话"
                android:textSize="16dp"
                android:visibility="gone"
                android:gravity="center"
                android:layout_weight="1"/>
            <EditText
                android:id="@+id/fund_detail_apply_edt"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@drawable/item_shape"
                android:ellipsize="start"
                android:maxLength="300"
                android:maxLines="4"
                android:paddingLeft="5dp"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/fund_detail_fasong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:background="@drawable/button1_sel"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="15dp" />

            <ImageView
                android:id="@+id/fund_detail_fenxiang"
                android:layout_width="40dp"
                android:layout_height="40dp"

                android:background="@drawable/back_sel"
                android:padding="5dp"
                android:scaleType="centerInside"
                android:src="@drawable/share_small"

                />

        </LinearLayout>
    </FrameLayout>
</FrameLayout>

