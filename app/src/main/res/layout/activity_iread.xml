<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.yunfengsi.E_Book.IRead">




    <com.yunfengsi.View.ReadTextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:textIsSelectable="true"
        android:letterSpacing="0.5"
        android:lineSpacingExtra="5dp"
        android:background="@color/lemonchiffon"
        android:id="@+id/read"/>


    <TextView
        android:id="@+id/progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/red"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="5dp"
        android:textSize="15dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/main_color"
        android:layout_marginTop="-45dp"
        android:id="@+id/head">


        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:id="@+id/back"
            android:background="@drawable/back_sel"
            android:src="@drawable/back"
            android:padding="10dp"/>


        <TextView
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/chapters"
            android:textSize="16dp"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_toLeftOf="@+id/share"
            android:background="@drawable/back_sel"
            android:text="目录"/>

        <ImageView
            android:id="@+id/share"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:padding="10dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/fenxiang2"/>



    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/main_color"
        android:layout_gravity="bottom"
        android:layout_marginBottom="-160dp"
        android:id="@+id/bottom">


      <LinearLayout
          android:id="@+id/sizeLayout"
          android:layout_width="wrap_content"
          android:orientation="horizontal"
          android:gravity="center_vertical"
          android:layout_centerHorizontal="true"
          android:layout_height="80dp">

          <TextView
              android:layout_marginRight="20dp"
              android:id="@+id/delete"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:padding="10dp"
              android:textSize="20dp"
              android:background="@drawable/back_sel"
              android:textColor="@color/white"
              android:text="减少"/>

          <TextView
              android:id="@+id/textsize"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:padding="10dp"
              android:textSize="20dp"
              android:textColor="@color/white"
              android:text="45"/>

          <TextView
              android:layout_marginLeft="20dp"
              android:id="@+id/add"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:padding="10dp"
              android:textSize="20dp"
              android:background="@drawable/back_sel"
              android:textColor="@color/white"
              android:text="增加"/>
      </LinearLayout>


        <LinearLayout
            android:layout_below="@+id/sizeLayout"
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_centerHorizontal="true"
            android:layout_height="80dp">

            <com.ruffian.library.RTextView
                android:layout_marginRight="40dp"
                android:id="@+id/day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:textSize="20dp"
                app:text_color_normal="@color/white"
                app:background_unable="@color/white"
                app:text_color_unable="@color/black"
                app:corner_radius="80dp"
                android:text="白天"/>



            <com.ruffian.library.RTextView
                android:layout_marginLeft="40dp"
                android:id="@+id/night"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:textSize="20dp"
                app:corner_radius="80dp"
                app:text_color_normal="@color/white"
                app:background_unable="@color/white"
                app:text_color_unable="@color/black"
                android:textColor="@color/white"
                android:text="夜间"/>
        </LinearLayout>


    </RelativeLayout>
</merge>
