<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/log"
        android:textSize="13dp"
        android:textColor="@color/black"/>

    <com.yunfengsi.View.DiffuseView
        android:id="@+id/audio_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:diffuse_color="@color/main_color"
        app:diffuse_coreImage="@drawable/auido_white"
        app:diffuse_width="3"
        app:diffuse_maxWidth="100"
        app:diffuse_coreRadius="25dp"
        app:diffuse_speed="100"
        app:diffuse_coreColor="@color/main_color"
        android:layout_gravity="bottom|center_horizontal" />

    <TextView
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_gravity="bottom"
        android:text="结果"
        android:gravity="center"
        android:textSize="20dp"
        android:textColor="@color/black"/>


</FrameLayout>