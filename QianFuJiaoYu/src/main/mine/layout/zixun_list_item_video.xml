<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearlayout_total"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/layout_bg_sel"
    android:orientation="vertical"
    android:padding="10dp">

    <cn.carbs.android.avatarimageview.library.AvatarImageView
        android:id="@+id/zixun_item_head"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginRight="10dp"
        android:scaleType="centerCrop" />

    <ImageView
        android:id="@+id/head_tip"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_alignBottom="@+id/zixun_item_head"
        android:layout_alignRight="@+id/zixun_item_head"
        android:layout_marginRight="5dp"

        android:visibility="gone" />

    <TextView
        android:id="@+id/zixun_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_toRightOf="@+id/zixun_item_head"
        android:textColor="#555555"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/job_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/zixun_item_name"
        android:layout_toRightOf="@+id/zixun_item_name"
        android:gravity="center"
        android:layout_marginLeft="3dp"
        android:visibility="gone"
        android:textColor="@color/white"
        android:textSize="12dp" />


    <TextView
        android:id="@+id/zixun_item_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/zixun_item_head"
        android:layout_marginTop="5dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:gravity="center_vertical"
        android:paddingBottom="8dp"
        android:paddingTop="8dp"
        android:textColor="@color/black"
        android:textSize="18dp" />
    <TextView
        android:id="@+id/sign"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/zixun_item_head"
        android:layout_alignLeft="@+id/zixun_item_name"
        android:layout_toRightOf="@+id/zixun_item_head"
        android:gravity="center"
        android:layout_marginBottom="3dp"
        android:textColor="@color/black"
        android:textSize="13dp" />

    <fm.jiecao.jcvideoplayer_lib.JCVideoPlayerStandard
        android:id="@+id/zixun_item_video"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_below="@+id/zixun_item_title">

    </fm.jiecao.jcvideoplayer_lib.JCVideoPlayerStandard>

    <TextView
        android:id="@+id/zixun_item_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:textColor="@color/gray"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_below="@+id/zixun_item_video"
        android:textSize="13dp" />


    <TextView
        android:id="@+id/zixun_item_pl_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawablePadding="3dp"
        android:textSize="12dp"
        android:layout_alignBottom="@+id/zixun_item_time"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"/>
    <TextView
        android:id="@+id/zixun_item_like_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/zixun_item_pl_text"
        android:drawablePadding="3dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="1dp"
        android:layout_alignBottom="@+id/zixun_item_time"
        android:textSize="12sp" />



</RelativeLayout>
