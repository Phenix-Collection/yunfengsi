<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@drawable/layout_bg_sel"
    android:id="@+id/linearlayout_total">

        <cn.carbs.android.avatarimageview.library.AvatarImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="centerCrop"
            android:id="@+id/zixun_item_head"
            android:layout_marginRight="10dp"
            />
        <ImageView
            android:id="@+id/head_tip"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:visibility="gone"
            android:layout_alignBottom="@+id/zixun_item_head"
            android:layout_alignRight="@+id/zixun_item_head"
            android:layout_marginRight="5dp"
            />
        <TextView
            android:id="@+id/zixun_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#555555"
            android:layout_toRightOf="@+id/zixun_item_head"
            android:layout_marginTop="3dp"
            android:textSize="16dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/job_tip"
            android:textSize="12dp"
            android:layout_marginLeft="3dp"
            android:gravity="center"
            android:visibility="gone"

            android:layout_alignBottom="@+id/zixun_item_name"
            android:layout_toRightOf="@+id/zixun_item_name"
            android:textColor="@color/white"
            />

    <TextView
        android:id="@+id/sign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/zixun_item_head"
        android:layout_alignLeft="@+id/zixun_item_name"
        android:layout_toRightOf="@+id/zixun_item_head"
        android:gravity="center"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginBottom="3dp"
        android:textColor="@color/black"
        android:textSize="13dp" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/zixun_item_title"
            android:ellipsize="end"
            android:maxLines="2"
            android:gravity="center_vertical"
            android:textSize="18dp"
            android:layout_below="@+id/zixun_item_head"
            android:textColor="@color/black"
            android:layout_marginTop="5dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            />



        <com.qianfujiaoyu.View.mAudioView
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:id="@+id/zixun_item_audio"
            android:layout_marginBottom="5dp"
            android:layout_below="@+id/zixun_item_title">

        </com.qianfujiaoyu.View.mAudioView>


            <TextView
                android:id="@+id/zixun_item_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/zixun_item_audio"
                android:layout_marginBottom="5dp"
                android:layout_alignParentBottom="true"
                android:textSize="13dp"
                />

            <TextView
                android:id="@+id/zixun_item_pl_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:drawablePadding="3dp"
                android:layout_alignBottom="@+id/zixun_item_time"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"/>


    <TextView
        android:id="@+id/zixun_item_like_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/zixun_item_pl_text"
        android:drawablePadding="3dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="1dp"
        android:layout_alignBottom="@+id/zixun_item_time"
        android:textSize="12sp" />




</RelativeLayout>
