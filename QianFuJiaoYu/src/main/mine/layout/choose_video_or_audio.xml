<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="20dp"
    >

<LinearLayout
    android:id="@+id/choose_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/choose_locale_file"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="70dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:src="@drawable/loacle_file"
        android:background="@drawable/tougao_addtileimg_bg"
        />


    <ImageView
        android:id="@+id/take_camera"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="70dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/tougao_addtileimg_bg"
        android:src="@drawable/getvideo" />
    <ImageView
        android:id="@+id/take_audio"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="70dp"
        android:layout_centerVertical="true"
        android:src="@drawable/getaudio"
        android:layout_marginLeft="5dp"
        android:background="@drawable/tougao_addtileimg_bg"
        android:layout_marginRight="5dp"/>
</LinearLayout>
    <TextView
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:background="@drawable/tougao_addtileimg_bg"
        android:id="@+id/textview_pressToAudio"
        android:text="按  住  说  话"
        android:gravity="center"
        android:layout_gravity="center"
        android:textSize="16sp"
        android:visibility="gone"
        />

</LinearLayout>
